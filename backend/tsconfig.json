{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "moduleResolution": "node",
	  "baseUrl": ".",
	  "paths": {
		"@auth/*": ["src/auth/*"],
		"@game/*": ["src/game/*"],
		"@user/*": ["src/user/*"],
		"@api/*": ["src/api/*"],
		"@database/*": ["src/database/*"]
	  }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
  }
