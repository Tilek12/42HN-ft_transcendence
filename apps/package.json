{
	"name": "transcendence",
	"scripts": {
		"dev": "concurrently \"vite --config /app/vite.config.mts\" \"tsx watch /app/src/backend/server.ts \"",
		"delete_dist": "rm -rf /app/dist/",
		"frontend": " tsc -p tsconfig.frontend.json",
		"backend": " tsc -p tsconfig.backend.json",
		"cp_assets": "cp -R src/frontend/images/ dist/frontend/",
		"cp_index": "cp src/frontend/index.html dist/frontend/",
		"tailwind": "tailwindcss -i src/frontend/styles.css -o dist/frontend/output.css",
		"build": "npm run frontend; npm run backend; npm run cp_assets; npm run cp_index; npm run tailwind",
		"prod": "npm run delete_dist && npm run build && node dist/backend/server.js",
		"update": "ncu -u"
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/csrf-protection": "^7.1.0",
		"@fastify/helmet": "^13.0.2",
		"@fastify/jwt": "^10.0.0",
		"@fastify/multipart": "^9.3.0",
		"@fastify/static": "^8.3.0",
		"@fastify/swagger": "^9.6.0",
		"@fastify/swagger-ui": "^5.2.3",
		"@fastify/type-provider-json-schema-to-ts": "^5.0.0",
		"@fastify/websocket": "^11.2.0",
		"@tailwindcss/cli": "^4.1.17",
		"@types/bcrypt": "^6.0.0",
		"@types/node": "^24.10.0",
		"@types/qrcode": "^1.5.6",
		"@types/sharp": "0.32.0",
		"@types/ws": "^8.18.1",
		"autoprefixer": "^10.4.21",
		"bcrypt": "^6.0.0",
		"close-with-grace": "^2.3.0",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"fastify": "^5.6.1",
		"otpauth": "^9.4.1",
		"pino-pretty": "^13.1.2",
		"postcss": "^8.5.6",
		"qrcode": "^1.5.4",
		"sharp": "0.34.5",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"npm-check-updates": "^19.1.2",
		"tsx": "^4.20.6",
		"vite": "^7.2.4"
	}
}
